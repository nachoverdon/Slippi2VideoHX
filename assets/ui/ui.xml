<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" height="100%">
	<vbox width="100%">
		<label id="slippi2video" text="Slippi2Video" verticalAlign="center" horizontalAlign="center"/>
	</vbox>

	<hbox id="components" width="100%" height="250">

		<vbox id="leftColumn" width="50%" height="100%">

			<grid id="paths" columns="3">
				<label text="Dolphin.exe" verticalAlign="center"/>
				<textfield id="dolphinTextField" width="150" height="40"/>
				<button id="dolphinButton" text="Browse" height="40"/>

				<label text="Replays" verticalAlign="center"/>
				<textfield id="replaysTextField" width="150" height="40"/>
				<button id="replaysButton" text="Browse" height="40"/>

				<label text="OBS.exe" verticalAlign="center"/>
				<textfield id="obsTextField" width="150" height="40"/>
				<button id="obsButton" text="Browse" height="40"/>

				<label text="Melee.iso" verticalAlign="center"/>
				<textfield id="meleeTextField" width="150" height="40"/>
				<button id="meleeButton" text="Browse" height="40"/>

				<label text="Videos" verticalAlign="center"/>
				<textfield id="videosTextField" width="150" height="40"/>
				<button id="videosButton" text="Browse" height="40"/>
			</grid>

		</vbox>

		<vbox id="rightColumn" width="50%" height="100%">

			<grid id="others" columns="2">
				<label text="Port" verticalAlign="center"/>
				<textfield id="port" width="150" height="30"/>

				<label text="Password" verticalAlign="center"/>
				<textfield id="password" width="150" height="30"/>

				<label text="Profile" verticalAlign="center"/>
				<textfield id="profile" width="150" height="30"/>

				<label text="Scene" verticalAlign="center"/>
				<textfield id="scene" width="150" height="30"/>

				<checkbox id="recursive" text="Recursive"/>
				<checkbox id="rename" text="Rename"/>

				<checkbox id="restructure" text="Restructure"/>
				<checkbox id="kill" text="Kill"/>
			</grid>
		</vbox>

	</hbox>

	<hbox id="buttons" width="100%">
		<button id="saveButton" text="Save" horizontalAlign="center"/>
		<button id="startButton" text="Start" horizontalAlign="center"/>
		<button id="exitButton" text="Exit" horizontalAlign="center"/>
	</hbox>
</vbox>